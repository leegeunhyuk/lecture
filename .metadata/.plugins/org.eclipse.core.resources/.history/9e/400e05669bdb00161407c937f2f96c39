	public void addHeight() {
		int n = 1;
		int height;

		while (true) {
			List<Person> subList = new ArrayList<Person>();
			if (n > 3) {
				break;
			}
			System.out.println("group " + n);

			while (true) {
				System.out.print("Å° : ");
				height = keyIn.nextInt();
				if (height == 0) {
					break;
				}
				subList.add(p = new Person(height));
			}
			list.add(subList);
			n++;
		}

	}

	public void printHeight() {
		for (int i = 0; i < list.size(); i++) {
			System.out.println("group" + (i + 1));
			for (int j = 0; j < list.get(i).size(); j++) {
				System.out.println("Å° :" + list.get(i).get(j).getHeight());
			}
		}

	}

	public void aveHeight() {

		for (int i = 0; i < list.size(); i++) {
			int sum = 0;
			for (int j = 0; j < list.get(i).size(); j++) {
				sum += list.get(i).get(j).getHeight();
			}
			System.out.println("group" + (i + 1) + "Æò±Õ : " + ((double)sum)/list.get(i).size());
		}
		// System.out.print("group1 :");
		// for (int i = 0; i < list1.size(); i++) {
		// sum += list1.get(i).getHeight();
		// }
		// System.out.println(((double) sum) / list1.size());
		// sum = 0;
		// System.out.print("group2 :");
		// for (int i = 0; i < list2.size(); i++) {
		// sum += list2.get(i).getHeight();
		// }
		// System.out.println(((double) sum) / list2.size());
		// sum = 0;
		// System.out.print("group3 :");
		// for (int i = 0; i < list3.size(); i++) {
		// sum += list3.get(i).getHeight();
		// }
		// System.out.println(((double) sum) / list3.size());

	}
}
