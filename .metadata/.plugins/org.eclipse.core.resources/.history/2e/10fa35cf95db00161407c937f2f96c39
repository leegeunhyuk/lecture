		list3 = new ArrayList<Person>();
		list = new ArrayList<List<Person>>();
		keyIn = new Scanner(System.in);
	}

	public void test() {
		List<Person> listTest;
		list.add(listTest = new ArrayList<Person>());
		listTest.add(p = new Person(180));
		System.out.println(listTest.get(0).getHeight());
	}

	public void addHeight() {
		int n = 1;
		int height;

		while (true) {
			List<Person> subList = new ArrayList<Person>();
			if (n > 3) {
				break;
			}
			System.out.println("group " + n);

			while (true) {
				System.out.print("Ű : ");
				height = keyIn.nextInt();
				if (height == 0) {
					break;
				}
				subList.add(p = new Person(height));
				
			}
			list.add(subList);
			n++;
		}

